{% extends 'base.html.twig' %}
{% block title %}
User Thang by ClintG in Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }} 
{% endblock %}
{% form_theme formFirstAndLast 'bootstrap_3_layout.html.twig' %}
{% form_theme formPassword 'bootstrap_3_layout.html.twig' %}
{% block body %}
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><em>User Thang!</em></a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
		<li><a href="/">Home</a></li>
        <li class="active"><a href="mailto:clintg@me.com?subject=Ur%20User%20App%20Is%20Cool">Contact</a></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <img src="/images/tes_logo.png" class="img-responsive" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-md-offset-3 col-sm-3 col-sm-offset-3">
    		{% if success.message1 is defined %}
		    	<button type="button" class="btn btn-success btn-lg btn-block">{{ success.message1 }}</button>
			{% endif %}
		</div>
		<div class="col-md-4 col-sm-4">
    		{% if success.message2 is defined %}
		    	<button type="button" class="btn btn-success btn-lg btn-block">{{ success.message2 }}</button>
			{% endif %}
		</div>
	</div>
    <div class="row">
        <div class="col-md-3 col-md-offset-3 col-sm-3 col-sm-offset-3">
        	<div class="col-md-12 img-rounded bg-color">
			    <h4 class="text-center">Update your name:</h4>
			    {{ form_start(formFirstAndLast) }}
				{{ form_widget(formFirstAndLast) }}
				{{ form_end(formFirstAndLast) }}
			</div>
			
		</div>
		<div class="col-md-4 col-sm-4">
			<div class="col-md-12 img-rounded bg-color">
			    <h4 class="text-center">Change Your Password:</h4>
			    {{ form_start(formPassword) }}
				{{ form_widget(formPassword) }}
				{{ form_end(formPassword) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}