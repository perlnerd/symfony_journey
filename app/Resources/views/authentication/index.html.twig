{% extends 'base.html.twig' %}
{% block title %}
Auth :: User Journey by ClintG in Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }} 
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <img src="/images/test_logo.png" class="img-responsive" />
        </div>
    </div>
        

    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <div class="page-header">
              <h1>Do I know you?</h1>
              <p class="lead">Please log in below.</p>
            </div>
            <form action="{{ path('auth') }}" method="post">
                <div class="form-group">
                    <label for="username">Email Address:</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                </div>
                {% for flash_message in app.session.flashBag.peek('target') %}
                    <input type="hidden" name="_target_path" value="{{ flash_message }}" />
                {% endfor %}
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
          <hr>
        </div>
    </div>
</div>
{% endblock %}